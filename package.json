{
  "name": "th-game",
  "private": true,
  "type": "module",
  "engines": {
    "pnpm": "^10.17.0",
    "node": ">=22.16.0"
  },
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "build": "pnpm -r run build",
    "lint": "eslint 'frontend/src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'frontend/src/**/*.{ts,tsx}' --fix",
    "dev:docker": "docker compose -f docker-compose.yml up --build",
    "prod:docker": "docker compose -f docker-compose.prod.yml up --build",
    "clear:docker": "docker-compose down --volumes",
    "migrate:docker": "docker compose exec backend npx drizzle-kit migrate",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "backend/**/*.schema.ts": [
      "pnpm --filter backend run db:check-migrations"
    ]
  }
}
